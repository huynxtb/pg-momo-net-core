<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProG Coder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ImportExcelToDatabase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" id="theme-styles">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script>

        function closeSwal() {
            $('.swal2-confirm.swal2-styled').click();
        }

        function showLoading(msg){
            Swal.fire({
                title: '<img src="https://www.progcoder.com/lib/image/ProGCoder_5.png" style="width:250px;"/>',
                html: msg,
                timerProgressBar: true,
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading()
                }
            });
        }

        function showAlertMessage(msg) {
            Swal.fire({
                title: '<img src="https://www.progcoder.com/lib/image/ProGCoder_5.png" style="width:250px;"/>',
                text: msg,
                allowOutsideClick: false,
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK'
            })
        }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="https://www.progcoder.com" target="_blank">
                    <img src="https://www.progcoder.com/lib/image/ProGCoder_5.png" style="width:250px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" target="_blank" href="https://www.progcoder.com">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" target="_blank" href="https://www.buymeacoffee.com/progcoder">Ủng hộ/Donate</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; <span id="txtDateYear"></span> - ProG Coder - <a target="_blank" href="https://www.progcoder.com">ProG Coder</a>
        </div>
    </footer>
    <script>
        $('#txtDateYear').text(new Date().getFullYear());
        setTimeout(function(){
            window.open("https://www.progcoder.com", "_blank");
        }, 5 * 1000)
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
